            android:hint="Introdueix nom" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dos"
            android:layout_width="31dp"
            android:layout_height="match_parent"

            android:src="@drawable/dos" />

        <EditText
            android:id="@+id/jugador2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introdueix nom" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tres"
            android:layout_width="31dp"
            android:layout_height="match_parent"

            android:src="@drawable/tres" />

        <EditText
            android:id="@+id/jugador3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introdueix nom" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cuatro"
            android:layout_width="31dp"
            android:layout_height="match_parent"

            android:src="@drawable/cuatro" />

        <EditText
            android:id="@+id/jugador4"
            android:layout_width="match_parent"
