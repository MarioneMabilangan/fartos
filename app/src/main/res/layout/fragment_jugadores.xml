            android:hint="Introdueix nom" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cinco"
            android:layout_width="31dp"
            android:layout_height="match_parent"

            android:src="@drawable/cinco" />

        <EditText
            android:id="@+id/jugador5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introdueix nom" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/seis"
